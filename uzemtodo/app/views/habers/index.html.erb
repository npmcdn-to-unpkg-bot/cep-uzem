<p id="notice"><%= notice %></p>

<h1>Listing Habers</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @habers.each do |haber| %>
      <tr>
        <td><%= haber.title %></td>
        <td><%= haber.content %></td>
        <td><%= haber.date %></td>
        <td><%= link_to 'Show', haber %></td>
        <td><%= link_to 'Edit', edit_haber_path(haber) %></td>
        <td><%= link_to 'Destroy', haber, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

